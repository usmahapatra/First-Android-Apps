<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/textColor"
    android:orientation="vertical"
    tools:context=".RestunantFrag">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/restaurents"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:layout_margin="2dp"
        android:textSize="30sp"
        android:textColor="@color/buttonBackground"
        android:textStyle="bold"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:text="@string/get_restaurents"
        android:id="@+id/get_restaurents"
        android:drawableLeft="@drawable/ic_restaurant_white_24dp"
        android:drawablePadding="10dp"
        android:padding="5dp"
        android:background="@color/buttonBackground"
        android:textColor="@color/textColor"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:id="@+id/rest_list"></android.support.v7.widget.RecyclerView>
</LinearLayout>