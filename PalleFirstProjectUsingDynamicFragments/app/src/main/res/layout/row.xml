<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"

        android:textSize="19sp"
        android:id="@+id/text1"
        android:textColor="#000"
        />

    <TextView
        android:id="@+id/textView_serialNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1"
        android:layout_centerHorizontal="true"
        android:textSize="19sp"

        android:textColor="#000" />

    <TextView
        android:id="@+id/textView_vidName"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:textSize="19sp"
        android:layout_below="@+id/textView_serialNo"
        android:layout_centerHorizontal="true"
        android:textColor="#000"

        />

    <TextView
        android:id="@+id/textView_vidDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_vidName"
        android:textSize="19sp"
        android:textColor="#000"
        android:layout_centerHorizontal="true"

        />


    <Button
        android:id="@+id/button1"
        android:layout_width="73dp"
        android:layout_height="34dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView_vidDuration"
        android:background="#f90000"
        android:textSize="17sp"
        android:text="DEMO"
        android:textColor="#fff"
        android:textStyle="bold" />
</RelativeLayout>
