<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    android:layout_margin="2dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#007"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.ujjwalsmahapatra.customadapterfirstwithlistviewarraylist.Main2Activity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignTop="@+id/textView1"

        android:textSize="20sp"
        android:textColor="#EFF"
        android:textStyle="bold" />

    <TextView
        android:textSize="20sp"
        android:id="@+id/textView1"
        android:textColor="#EFF"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toRightOf="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="85dp"
        android:layout_marginStart="85dp"

        android:layout_marginTop="14dp"
         />

    <TextView
        android:id="@+id/textView2"
        android:textSize="20sp"
        android:textColor="#EFF"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignStart="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="16dp"
         />

    <TextView
        android:id="@+id/textView3"
        android:textColor="#EFF"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:textSize="20sp"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="20dp"
         />

    <CheckBox
        android:id="@+id/checkBox1"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView3"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"
        android:text="CheckBox"
        android:textColorHighlight="#FFF"
        android:focusable="false"
        android:textColor="#FFF"
        android:textColorLink="#FFF"
        android:shadowColor="#FFF"/>
</RelativeLayout>

</android.support.v7.widget.CardView>